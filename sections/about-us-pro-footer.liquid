{{ 'about-us-image-with-text.css' | asset_url | stylesheet_tag }}

<div class="pro_footer page-width">
<div class="pro_footer_heading">
   <h2 class="image-with-text__heading h1"> {{ section.settings.heading | escape }} </h2>
</div>
   <div class="pro_footer_btn">
    <a href="{{section.settings.buttonLink1}}" class="banner-btn button--primary">
      {{section.settings.buttonTitle1}}
    </a>
     <a href="{{section.settings.buttonLink2}}" class="banner-btn button--primary">
      {{section.settings.buttonTitle2}}
    </a>
    </div>
   
  <div class="pro_footer_text">
       <p class=" rte"> {{ section.settings.subheading }} </p>
</div>

{% schema %}
  {
    "name": "About-us-pro-footer",
    "settings": [
    {
          "type": "text",
          "id": "heading",
          "label": "Heading"
        },
        {
          "id": "buttonTitle1",
          "type": "text",
          "label": "first Button Title"
        },
        {
          "id": "buttonLink1",
          "type": "url",
          "label": "first Button Link"
        },
         {
          "id": "buttonTitle2",
          "type": "text",
          "label": "second Button Title"
        },
        {
          "id": "buttonLink2",
          "type": "text",
          "label": "second Button Link"
        },
      {
          "type": "html",
          "id": "subheading",
          "label": "Heading"
        }
],
      "templates": ["page"],
  
   "presets": [
    {
      "name": "About-us-pro-footer"
    }
  ]
  }
{% endschema %}

