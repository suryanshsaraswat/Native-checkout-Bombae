<div class="mx-product">
  <div class="mx-product-slider">
    {%- for block in section.blocks -%}
      {%- assign product = all_products[block.settings.featured_product] -%}
      {% assign current_variant = product.selected_or_first_available_variant %}
      <div class="slidecc" id="{{block.id}}">
        <a href="{{ product.url }}">
          <div class="product-cardd">
            <div class="product-imageaa">
              {% for tag in product.tags %}
                {% if tag == 'new-arrival-marqee' %}
                  {% render 'new arrival marqeee' %}
                {% elsif tag == 'bestseller-marqee' %}
                  {% render 'bestseller marqee' %}
                {% else %}
                  <div class="display:none"></div>
                {% endif %}
              {% endfor %}
              <img src="{{ block.settings.featured_image | img_url: 'master'}}">
              <img class="hvx" src="{{ block.settings.featured_image2 | img_url: 'master'}}">
            </div>
            <div class="product-detailss">
              <!--               <div class="ofr"><img src="https://cdn.shopify.com/s/files/1/0577/1368/8771/files/gift-box.png?v=1666078101"><p>{{ block.settings.offersss }}</p></div> -->
              <h2>{{ product.title }}</h2>

              <div class="metaflexx">
                {%- if product.compare_at_price > product.price -%}
                  <p class="pricedivv">MRP
                    <span class="price-compareat">{{ product.compare_at_price | money }}</span>
                    <span class="pridce">{{ product.price | money }}</span>
                  </p>
                {%- else -%}
                  <p class="pricedivv">
                    <span class="pridce">MRP {{ product.price | money }}</span>
                  </p>
                {% endif %}
                <div class="btncartt">
                  {%- if product.available -%}
                    <a class="button button_primary js_addtc atccrr" data-id="{{ product.selected_or_first_available_variant.id}}">Add to cart</a>
                  {%- else -%}
                    <a class="truncate out_stock button pe_nonee">Sold Out</a>
                  {%- endif -%}

                </div>
              </div>
            </div>
          </div>
        </a>
      </div>
    {%- endfor -%}
  </div>
</div>
{% schema %}
  {
    "name": "Rollplay block",
    "settings": [],
    "blocks": [
      {
        "type": "Product",
        "name": "Product Slider",
        "settings": [
          {
            "type": "product",
            "id": "featured_product",
            "label": "Select Product"
          },
          {
            "type": "image_picker",
            "id": "featured_image",
            "label": "Upload Image"
          },
          {
            "type": "image_picker",
            "id": "featured_image2",
            "label": "Upload Back Image"
          },
          {
            "type": "text",
            "id": "offersss",
            "label": "write your offer here"
          }, {
            "type": "text",
            "id": "maqree",
            "label": "enter marqee text"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Rollplay Slider",
        "category": "Product"

      }
    ]
  }
{% endschema %}
