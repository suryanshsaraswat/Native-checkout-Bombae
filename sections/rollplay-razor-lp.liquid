    }
    a.atccr {
      margin: 10px 0 5px;
      font-size: 12px;
    }
    .mx-product {
      margin-bottom: 32px;
    }
    .pricedivv .price-compareat {
      padding-right: 0
    }
    .metaflexx {
      margin-top: -8px
